RewriteEngine On

# 1. Skip real files/directories
RewriteCond %{REQUEST_FILENAME} -s [OR]
RewriteCond %{REQUEST_FILENAME} -l [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^.*$ - [NC,L]

# 2. Handle extensionless PHP files (e.g. about -> about.php)
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^([^/]+)/?$ $1.php [L,QSA]

# 3. Handle Brand/Model (2 segments) -> checklist.php
RewriteRule ^([^/]+)/([^/]+)/?$ checklist.php?brand=$1&model=$2 [L,QSA]

# 3.5 Handle Location Service (e.g., car-pdi-service-in-gurgaon)
RewriteRule ^car-pdi-service-in-([^/]+)/?$ location-service.php?city=$1 [L,QSA]

# 4. Handle Brand (1 segment) -> models.php
RewriteRule ^([^/]+)/?$ models.php?brand=$1 [L,QSA]
